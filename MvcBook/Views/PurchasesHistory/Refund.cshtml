                    </div>
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.Ammount)
                    </div>
                    <div class="col-sm-6 bg-light boldclass">
                        @Html.DisplayNameFor(model => model.Price)
                    </div>
                    <div class="col-sm-6 bg-light">
                        @Html.DisplayFor(model => model.Price)
                    </div>
