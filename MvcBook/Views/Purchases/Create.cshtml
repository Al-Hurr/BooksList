@model MvcBook.Models.Purchase

@{
    ViewData["Title"] = "Создать";
    Layout = null;
}
<div class="modal-dialog  modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-body"> 
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-5 boldclass m-2">
                        @Html.DisplayNameFor(x => x.Book.Title)
                    </div>
                    <div class="col-5 m-2">
                        @Html.DisplayFor(x => x.Book.Title)
                    </div>
                    <div class="col-5 boldclass m-2">
                        @Html.DisplayNameFor(x => x.Book.Autor)
                    </div>
                    <div class="col-5 m-2">
                        @Html.DisplayFor(x => x.Book.Autor.Name)
                    </div>
                    <div class="col-5 boldclass m-2">
                        @Html.DisplayNameFor(x => x.Price)
                    </div>
                    <div class="form-group col-3 m-2">
                        <input asp-for="Price" class="form-control" readonly />
                    </div>
                    <div class="col-5 boldclass m-2">
                        @Html.DisplayNameFor(x => x.Ammount)
                    </div>  
                    <div class="d-flex align-items-center">
                        <button type="button" class="minusbutton border-0 bg-transparent"> <span class=" fa fa-minus"></span></button>
                    </div>
                    <div class="form-group col-3 m-2">
                        <input asp-for="Ammount" class="form-control" readonly min="1" />
                    </div>
                    <div class="d-flex align-items-center">
                        <button type="button" class="plusbutton border-0 bg-transparent"> <span class=" fa fa-plus"></span></button>
                    </div>
                    <input type="hidden" bookprice value="@Model.Book.Price" />
                    <input type="hidden" asp-for="BookId" />
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary sub" />
                    <a asp-controller="Books" asp-action="Index" style="float: right; margin-right: 25px; margin-top: 7px;"><span class="fa fa-arrow-left"></span></a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
}
