@model MvcBook.Models.AuthorViewModel

@{
    ViewData["Title"] = "Авторы";
}

<h1>Авторы</h1>


<p>
    <a asp-action="Create"><span class=" fa fa-plus"></span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Authors[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authors[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authors[0].Email)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Authors)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id"><span class=" fa fa-eye"></span></a> |
                <a asp-action="Edit" asp-route-id="@item.Id"><span class=" fa fa-edit"></span></a>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                
                <a asp-action="Delete" asp-route-id="@item.Id"><span class=" fa fa-trash"></span></a>
            </td>
        </tr>
        }
    </tbody>
</table>


